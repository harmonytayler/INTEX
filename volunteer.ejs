<!-- Form for someone to volunteer (from the first landing page) -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Volunteer</title>
</head>
<body>
    <nav>
        <div class="org-name">Turtle Shelter Project</div>
        <div class="nav-links">
            <a href="/"><button class="link">Home</button></a>
            <a href="/donate"><button class="link">Donate</button></a>
            <a href="/request"><button class="link">Request an Event</button></a>
            <a href="/volunteer"><button class="link">Volunteer</button></a>
            <a href="/about"><button class="link">About</button></a>
        </div>
    </nav>

    <form action="/volunteer" method="POST">
        <table class="form">
            <caption>Volunteer</caption>
            <tr>
                <td><label for="first_name">First Name</label></td>
                <td><input type="text" id="first_name" name="first_name" placeholder="Enter your first name" required></td>
            </tr>
            <tr>
                <td><label for="last_name">Last Name</label></td>
                <td><input type="text" id="last_name" name="last_name" placeholder="Enter your last name" required></td>
            </tr>
            <tr>
                <td><label for="phone">Phone</label></td>
                <td><input type="text" id="phone" name="phone" placeholder="Enter your phone number" required></td>
            </tr>
            <tr>
                <td><label for="email">Email</label></td>
                <td><input type="text" id="email" name="email" placeholder="Enter your email address" required></td>
            </tr>
            <tr>
                <td><label for="city">City</label></td>
                <td><input type="text" id="city" name="city" placeholder="Enter your city" required></td>
            </tr>
            <tr>
                <td><label for="monthly_hours">Monthly Hours</label></td>
                <td><input type="number" id="monthly_hours" name="monthly_hours" placeholder="How many hours per month can you volunteer?" required></td>
            </tr>
            <tr>
                <td><label for="travel">Travel</label></td>
                <td><input type="text" id="travel" name="travel" placeholder="How far are you willing to travel for events?" required></td>
            </tr>
            <tr>
                <td><label for="referral_source">How did you hear about us?</label></td>
                <td>    
                    <select id="referral_source" name="referral_source">
                        <option value="" disabled selected>Select an option from the dropdown</option>
                        <option value="Word of mouth">Word of mouth</option>
                        <option value="Podcast">Podcast</option>
                        <option value="Online">Online</option>
                        <option value="Service activity">Service activity</option>
                        <option value="Other">Other</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="sewing_level">Sewing Level</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="sewing_level" value="Beginner">Beginner<br>
                    <input type="radio" name="sewing_level" value="Intermediate">Intermediate<br>
                    <input type="radio" name="sewing_level" value="Advanced">Advanced
                </td>
            </tr>
            <tr>
                <td><label for="take_charge">Do you want to help lead events?</label></td>
                <td style="text-align: left;">
                    <input type="radio" id="take_charge" name="take_charge" value="yes">Yes<br>
                    <input type="radio" id="take_charge" name="take_charge" value="no">No
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <button type="submit">Submit</button>
                </td>
            </tr>
        </table>
    </form>

    <footer>
        <div class="footer-left">
            <a href="/login">Admin Tools</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>Â© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
