<!-- Form to edit requested events. (Is there an easy way to let them check approved, denied, pending, etc?) -->

<!DOCTYPE html>
<html>
<head>
    <title>Edit Requested Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <div class="org-name">Turtle Shelter Project</div>
        <div class="nav-links">
            <a href="/landing2"><button class="link">Admin Tools</button></a>
            <a href="/"><button class="link">Home Page</button></a>
        </div>
    </nav>
    <form action="/editRequest/<%= eventRequests.event_id %>" method="POST">
        <table>
            <caption>Edit Event Request</caption>
            <tr>
                <td><label for="description">Description</label></td>
                <td><input type="text" id="description" name="description" value="<%= eventRequests.description %>" required></td>
            </tr>
            <tr>
                <td><label for="anticipated_participants">Anticipated Participants</label></td>
                <td><input type="number" id="anticipated_participants" name="anticipated_participants" required value="<%= eventRequests.anticipated_participants %>"></td>
            </tr>
            <tr>
                <td><label for="under_ten">Under Ten</label></td>
                <td><input type="number" id="under_ten" name="under_ten" required value="<%= eventRequests.under_ten %>"></td>
            </tr>
            <tr>
                <td><label for="possible_date">Requested Date</label></td>
                <td><input type="date" id="possible_date" name="possible_date" required value="<%= eventRequests.possible_date.toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label for="actual_date">Scheduled Date</label></td>
                <td><input type="date" id="actual_date" name="actual_date" required value="<%= new Date().toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label>Event Type</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="type" value="Sewing" <%= eventRequests.type === 'Sewing' ? 'checked' : '' %>> Sewing<br>
                    <input type="radio" name="type" value="Non-sewing"<%= eventRequests.type === 'Non-sewing' ? 'checked' : '' %>> Non-sewing<br>
                    <input type="radio" name="type" value="Both" <%= eventRequests.type === 'Non-sewing' ? 'checked' : '' %>> Both
                </td>
            </tr>
            <tr>
                <td><label for="street_address">Street Address</label></td>
                <td><input type="text" id="street_address" name="street_address" required value="<%= eventRequests.street_address %>"></td>
            </tr>
            <tr>
                <td><label for="city">City</label></td>
                <td><input type="text" id="city" name="city" required value="<%= eventRequests.city %>"></td>
            </tr>
            <tr>
                <td><label for="state">State</label></td>
                <td><select id="state" name="state"><option required value="<%= eventRequests.state %>">---</option><option value="AL">Alabama</option><option value="AK">Alaska</option><option value="AZ">Arizona</option><option value="AR">Arkansas</option><option value="CA">California</option><option value="CO">Colorado</option><option value="CT">Connecticut</option><option value="DE">Delaware</option><option value="DC">District of Columbia</option><option value="FL">Florida</option><option value="GA">Georgia</option><option value="HI">Hawaii</option><option value="ID">Idaho</option><option value="IL">Illinois</option><option value="IN">Indiana</option><option value="IA">Iowa</option><option value="KS">Kansas</option><option value="KY">Kentucky</option><option value="LA">Louisiana</option><option value="ME">Maine</option><option value="MD">Maryland</option><option value="MA">Massachusetts</option><option value="MI">Michigan</option><option value="MN">Minnesota</option><option value="MS">Mississippi</option><option value="MO">Missouri</option><option value="MT">Montana</option><option value="NE">Nebraska</option><option value="NV">Nevada</option><option value="NH">New Hampshire</option><option value="NJ">New Jersey</option><option value="NM">New Mexico</option><option value="NY">New York</option><option value="NC">North Carolina</option><option value="ND">North Dakota</option><option value="OH">Ohio</option><option value="OK">Oklahoma</option><option value="OR">Oregon</option><option value="PA">Pennsylvania</option><option value="RI">Rhode Island</option><option value="SC">South Carolina</option><option value="SD">South Dakota</option><option value="TN">Tennessee</option><option value="TX">Texas</option><option value="UT">Utah</option><option value="VT">Vermont</option><option value="VA">Virginia</option><option value="WA">Washington</option><option value="WV">West Virginia</option><option value="WI">Wisconsin</option><option value="WY">Wyoming</option></select></td>
			</tr>
            <tr>
                <td><label for="zip">Zip</label></td>
                <td><input type="text" id="zip" name="zip" required value="<%= eventRequests.zip %>"></td>
            </tr>
            <tr>
                <td><label for="start_time">Start Time</label></td>
                <td><input type="time" id="start_time" name="start_time" required value="<%= eventRequests.start_time %>"></td>
            </tr><tr>
                <td><label for="duration">Duration</label></td>
                <td><input type="text" id="duration" name="duration" required value="<%= eventRequests.duration %>"></td>
            </tr>
            <tr>
                <td><label for="contact_name">Contact Name</label></td>
                <td><input type="text" id="contact_name" name="contact_name" required value="<%= eventRequests.contact_name %>"></td>
            </tr>
            <tr>
                <td><label for="contact_phone">Contact Phone</label></td>
                <td><input type="text" id="contact_phone" name="contact_phone" required value="<%= eventRequests.contact_phone %>"></td>
            </tr>
            <tr>
                <td><label for="contact_email">Contact Email</label></td>
                <td><input type="text" id="contact_email" name="contact_email" required value="<%= eventRequests.contact_email %>"></td>
            </tr>
            <tr>
                <td><label for="machines">Machines</label></td>
                <td><input type="number" id="machines" name="machines" required value="<%= eventRequests.machines %>"></td>
            </tr>
            <tr>
                <td><label for="sewers">Sewers</label></td>
                <td><input type="number" id="sewers" name="sewers" required value="<%= eventRequests.sewers %>"></td>
            </tr>
            <tr>
                <td><label>Did Jen share her story?</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="story" value="Yes, long" <%= eventRequests.story === 'Yes, long' ? 'checked' : '' %>> Yes, Long<br>
                    <input type="radio" name="story" value="Yes, short" <%= eventRequests.story === 'Yes, short' ? 'checked' : '' %>> Yes, Short<br>
                    <input type="radio" name="story" value="No" <%= eventRequests.story === 'No' ? 'checked' : '' %>> No
                </td>
            </tr>
            <tr>
                <td><label for="members_needed">Members Needed</label></td>
                <td><input type="number" id="members_needed" name="members_needed" required value="<%= eventRequests.members_needed %>"></td>
            </tr>
            <tr>
                <td><label>Status</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="status" value="Pending" <%= eventRequests.status === 'Pending' ? 'checked' : '' %>> Pending<br>
                    <input type="radio" name="status" value="Approved" <%= eventRequests.status === 'Approved' ? 'checked' : '' %>> Approved<br>
                    <input type="radio" name="status" value="Denied" <%= eventRequests.status === 'No' ? 'Denied' : '' %>> Denied<br>
                    <input type="radio" name="status" value="Completed" <%= eventRequests.status === 'No' ? 'Completed' : '' %>> Completed
                </td>
            </tr>
            <tr>
                <td><label for="notes">Notes</label></td>
                <td><input type="text" id="notes" name="notes" required value="<%= eventRequests.notes %>"></td>
            </tr>
            <tr>
                <td colspan="11" style="text-align: center; width: 100%;">
                    <button class="table-button" type="submit">Edit Event</button>
                </td>
            </tr>
        </table>
    </form>

    <form action="/eventRequests" method="GET">
        <button type="submit">Back</button>
    </form>

    <main></main>
    <footer>
        <div class="footer-left">
            <a href="/login">Admin Tools</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>Â© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
