<!-- Display users -->

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style.css">
    <title>Team Members</title>
</head>
<body>
    <h1 style="text-align: center;">Team Members</h1>
    <table>
        <thead>
            <tr>
                <!-- Headers for table to display planet info -->
                <th>Volunteer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Referral Source</th>
                <th>Sewing Level</th>
                <th>Monthly Hours</th>
                <th>City</th>
                <th>Username</th>
                <th>Password</th>
                <th>Travel</th>
                <th>Take Charge</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody style="font-family: Arial; font-size: 9pt;">
            <% for (let iCount = 0; iCount < members.length; iCount++) { %>
                <tr>
                    <td><%= members[iCount].volunteer_id %></td>
                    <td><%= members[iCount].first_name %></td>
                    <td><%= members[iCount].last_name %></td>
                    <td><%= members[iCount].phone %></td>
                    <td><%= members[iCount].email %></td>
                    <td><%= members[iCount].referral_source %></td>
                    <td><%= members[iCount].sewing_level %></td>
                    <td><%= members[iCount].monthly_hours %></td>
                    <td><%= members[iCount].city %></td>
                    <td><%= members[iCount].username %></td>
                    <td><%= members[iCount].password %></td>
                    <td><%= members[iCount].travel %></td>
                    <td><%= members[iCount].take_charge %></td>
                    <td><%= members[iCount].status %></td>
                    <td style="text-align: center;">
                        <form action="/editUser/<%= members[iCount].volunteer_id %>" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                    <td style="text-align: center;">
                        <form action="/deleteUser/<%= members[iCount].volunteer_id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- At the bottom of the page display a button labled Add User (which allows you to add a user record) 
    and a button labeled Home which takes you back to the main landing page -->
    <form action="/addUser" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
        <button type="submit">Add User</button>
    </form>
    <form action="/landing2" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
        <button type="submit">Home</button>
    </form>
</body>
</html>
