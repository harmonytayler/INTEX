// Display users

<!DOCTYPE html>
<html>
<head>
  <title>Team Members</title>
  <style>
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      font-size: 10px; /* Reduce the font size of the table */
    }
    th, td {
      border: 1px solid #ddd;
      padding: 5px; /* Reduce the padding to decrease row height */
      text-align: center;
      line-height: 1.2; /* Adjust line height for smaller rows */
    }
    th {
      background-color: #F2F2F2;
      font-weight: bold;
    }
    button {
      padding: 4px 8px; /* Adjust button size */
      margin: 2px;
      font-size: 12px; /* Adjust button font size */
      cursor: pointer;
    }
  </style>
</head>
<body>
    <h1 style="text-align: center;">Team Members</h1>
    <table>
        <thead>
            <tr>
                <!-- Headers for table to display planet info -->
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through everything in the members array -->
            <% if (members.length > 0) { %>
                <% members.forEach(row => { %>
                    <tr>
                        <!-- Add data to the table -->
                        <input type="hidden" value="row.id">
                        <td><%= row.first_name %></td>
                        <td><%= row.last_name %></td>
                        <td>
                        <!-- Each record has an edit and delete button -->
                        <form action="/editUser/<%= row.id %>" method="GET" style="display:inline;">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/deleteUser/<%= row.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                        </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                <td colspan="7">No data available</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- At the bottom of the page display a button labled Add User (which allows you to add a user record) 
    and a button labeled Home which takes you back to the main landing page -->
    <form action="/addUser" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
        <button type="submit">Add User</button>
    </form>
    <form action="/landing2" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
        <button type="submit">Home</button>
    </form>
</body>
</html>
