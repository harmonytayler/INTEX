<!-- Form to edit requested events. (Is there an easy way to let them check approved, denied, pending, etc?) -->

<!DOCTYPE html>
<html>
<head>
    <title>Edit Requested Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <div class="org-name">Turtle Shelter Project</div>
        <div class="nav-links">
            <a href="/landing2"><button class="link">Admin Tools</button></a>
            <a href="/"><button class="link">Home Page</button></a>
        </div>
    </nav>
    <form action="/editRequest/<%= eventRequests.event_id %>" method="POST">
        <table>
            <caption>Edit Event Request</caption>
            <tr>
                <td><label for="description">Description</label></td>
                <td><input type="text" id="description" name="description" value="<%= eventRequests.description %>" required></td>
            </tr>
            <tr>
                <td><label for="anticipated_participants">Anticipated Participants</label></td>
                <td><input type="number" id="anticipated_participants" name="anticipated_participants" required value="<%= eventRequests.anticipated_participants %>"></td>
            </tr>
            <tr>
                <td><label for="under_ten">Under Ten</label></td>
                <td><input type="number" id="under_ten" name="under_ten" required value="<%= eventRequests.under_ten %>"></td>
            </tr>
            <tr>
                <td><label for="possible_date">Requested Date</label></td>
                <td><input type="date" id="possible_date" name="possible_date" required value="<%= eventRequests.possible_date.toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label for="actual_date">Scheduled Date</label></td>
                <td><input type="date" id="actual_date" name="actual_date" required value="<%= new Date().toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label>Event Type</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="type" value="Sewing" <%= eventRequests.type === 'Sewing' ? 'checked' : '' %>> Sewing<br>
                    <input type="radio" name="type" value="Non-sewing"<%= eventRequests.type === 'Non-sewing' ? 'checked' : '' %>> Non-sewing<br>
                    <input type="radio" name="type" value="Both" <%= eventRequests.type === 'Both' ? 'checked' : '' %>> Both
                </td>
            </tr>
            <tr>
                <td><label for="street_address">Street Address</label></td>
                <td><input type="text" id="street_address" name="street_address" required value="<%= eventRequests.street_address %>"></td>
            </tr>
            <tr>
                <td><label for="city">City</label></td>
                <td><input type="text" id="city" name="city" required value="<%= eventRequests.city %>"></td>
            </tr>
            <tr>
                <td><label for="state">State</label></td>
                <td>
                    <select id="state" name="state" required>
                        <option value="---" <%= eventRequests.state === "---" ? "selected" : "" %> >---</option>
                        <option value="AL" <%= eventRequests.state === "AL" ? "selected" : "" %>>Alabama</option>
                        <option value="AK" <%= eventRequests.state === "AK" ? "selected" : "" %>>Alaska</option>
                        <option value="AZ" <%= eventRequests.state === "AZ" ? "selected" : "" %>>Arizona</option>
                        <option value="AR" <%= eventRequests.state === "AR" ? "selected" : "" %>>Arkansas</option>
                        <option value="CA" <%= eventRequests.state === "CA" ? "selected" : "" %>>California</option>
                        <option value="CO" <%= eventRequests.state === "CO" ? "selected" : "" %>>Colorado</option>
                        <option value="CT" <%= eventRequests.state === "CT" ? "selected" : "" %>>Connecticut</option>
                        <option value="DE" <%= eventRequests.state === "DE" ? "selected" : "" %>>Delaware</option>
                        <option value="DC" <%= eventRequests.state === "DC" ? "selected" : "" %>>District of Columbia</option>
                        <option value="FL" <%= eventRequests.state === "FL" ? "selected" : "" %>>Florida</option>
                        <option value="GA" <%= eventRequests.state === "GA" ? "selected" : "" %>>Georgia</option>
                        <option value="HI" <%= eventRequests.state === "HI" ? "selected" : "" %>>Hawaii</option>
                        <option value="ID" <%= eventRequests.state === "ID" ? "selected" : "" %>>Idaho</option>
                        <option value="IL" <%= eventRequests.state === "IL" ? "selected" : "" %>>Illinois</option>
                        <option value="IN" <%= eventRequests.state === "IN" ? "selected" : "" %>>Indiana</option>
                        <option value="IA" <%= eventRequests.state === "IA" ? "selected" : "" %>>Iowa</option>
                        <option value="KS" <%= eventRequests.state === "KS" ? "selected" : "" %>>Kansas</option>
                        <option value="KY" <%= eventRequests.state === "KY" ? "selected" : "" %>>Kentucky</option>
                        <option value="LA" <%= eventRequests.state === "LA" ? "selected" : "" %>>Louisiana</option>
                        <option value="ME" <%= eventRequests.state === "ME" ? "selected" : "" %>>Maine</option>
                        <option value="MD" <%= eventRequests.state === "MD" ? "selected" : "" %>>Maryland</option>
                        <option value="MA" <%= eventRequests.state === "MA" ? "selected" : "" %>>Massachusetts</option>
                        <option value="MI" <%= eventRequests.state === "MI" ? "selected" : "" %>>Michigan</option>
                        <option value="MN" <%= eventRequests.state === "MN" ? "selected" : "" %>>Minnesota</option>
                        <option value="MS" <%= eventRequests.state === "MS" ? "selected" : "" %>>Mississippi</option>
                        <option value="MO" <%= eventRequests.state === "MO" ? "selected" : "" %>>Missouri</option>
                        <option value="MT" <%= eventRequests.state === "MT" ? "selected" : "" %>>Montana</option>
                        <option value="NE" <%= eventRequests.state === "NE" ? "selected" : "" %>>Nebraska</option>
                        <option value="NV" <%= eventRequests.state === "NV" ? "selected" : "" %>>Nevada</option>
                        <option value="NH" <%= eventRequests.state === "NH" ? "selected" : "" %>>New Hampshire</option>
                        <option value="NJ" <%= eventRequests.state === "NJ" ? "selected" : "" %>>New Jersey</option>
                        <option value="NM" <%= eventRequests.state === "NM" ? "selected" : "" %>>New Mexico</option>
                        <option value="NY" <%= eventRequests.state === "NY" ? "selected" : "" %>>New York</option>
                        <option value="NC" <%= eventRequests.state === "NC" ? "selected" : "" %>>North Carolina</option>
                        <option value="ND" <%= eventRequests.state === "ND" ? "selected" : "" %>>North Dakota</option>
                        <option value="OH" <%= eventRequests.state === "OH" ? "selected" : "" %>>Ohio</option>
                        <option value="OK" <%= eventRequests.state === "OK" ? "selected" : "" %>>Oklahoma</option>
                        <option value="OR" <%= eventRequests.state === "OR" ? "selected" : "" %>>Oregon</option>
                        <option value="PA" <%= eventRequests.state === "PA" ? "selected" : "" %>>Pennsylvania</option>
                        <option value="RI" <%= eventRequests.state === "RI" ? "selected" : "" %>>Rhode Island</option>
                        <option value="SC" <%= eventRequests.state === "SC" ? "selected" : "" %>>South Carolina</option>
                        <option value="SD" <%= eventRequests.state === "SD" ? "selected" : "" %>>South Dakota</option>
                        <option value="TN" <%= eventRequests.state === "TN" ? "selected" : "" %>>Tennessee</option>
                        <option value="TX" <%= eventRequests.state === "TX" ? "selected" : "" %>>Texas</option>
                        <option value="UT" <%= eventRequests.state === "UT" ? "selected" : "" %>>Utah</option>
                        <option value="VT" <%= eventRequests.state === "VT" ? "selected" : "" %>>Vermont</option>
                        <option value="VA" <%= eventRequests.state === "VA" ? "selected" : "" %>>Virginia</option>
                        <option value="WA" <%= eventRequests.state === "WA" ? "selected" : "" %>>Washington</option>
                        <option value="WV" <%= eventRequests.state === "WV" ? "selected" : "" %>>West Virginia</option>
                        <option value="WI" <%= eventRequests.state === "WI" ? "selected" : "" %>>Wisconsin</option>
                        <option value="WY" <%= eventRequests.state === "WY" ? "selected" : "" %>>Wyoming</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="zip">Zip</label></td>
                <td><input type="text" id="zip" name="zip" required value="<%= eventRequests.zip %>"></td>
            </tr>
            <tr>
                <td><label for="start_time">Start Time</label></td>
                <td><input type="time" id="start_time" name="start_time" required value="<%= eventRequests.start_time %>"></td>
            </tr><tr>
                <td><label for="duration">Duration</label></td>
                <td><input type="text" id="duration" name="duration" required value="<%= eventRequests.duration %>"></td>
            </tr>
            <tr>
                <td><label for="contact_name">Contact Name</label></td>
                <td><input type="text" id="contact_name" name="contact_name" required value="<%= eventRequests.contact_name %>"></td>
            </tr>
            <tr>
                <td><label for="contact_phone">Contact Phone</label></td>
                <td><input type="text" id="contact_phone" name="contact_phone" required value="<%= eventRequests.contact_phone %>"></td>
            </tr>
            <tr>
                <td><label for="contact_email">Contact Email</label></td>
                <td><input type="text" id="contact_email" name="contact_email" required value="<%= eventRequests.contact_email %>"></td>
            </tr>
            <tr>
                <td><label for="machines">Machines</label></td>
                <td><input type="number" id="machines" name="machines" required value="<%= eventRequests.machines %>"></td>
            </tr>
            <tr>
                <td><label for="sewers">Sewers</label></td>
                <td><input type="number" id="sewers" name="sewers" required value="<%= eventRequests.sewers %>"></td>
            </tr>
            <tr>
                <td><label>Should Jen share her story?</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="story" value="Yes, long" <%= eventRequests.story === 'Yes, long' ? 'checked' : '' %>> Yes, Long<br>
                    <input type="radio" name="story" value="Yes, short" <%= eventRequests.story === 'Yes, short' ? 'checked' : '' %>> Yes, Short<br>
                    <input type="radio" name="story" value="No" <%= eventRequests.story === 'No' ? 'checked' : '' %>> No
                </td>
            </tr>
            <tr>
                <td><label for="members_needed">Members Needed</label></td>
                <td><input type="number" id="members_needed" name="members_needed" required value="<%= eventRequests.members_needed %>"></td>
            </tr>
            <tr>
                <td><label>Status</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="status" value="Pending" <%= eventRequests.status === 'Pending' ? 'checked' : '' %>> Pending<br>
                    <input type="radio" name="status" value="Approved" <%= eventRequests.status === 'Approved' ? 'checked' : '' %>> Approved<br>
                    <input type="radio" name="status" value="Denied" <%= eventRequests.status === 'Denied' ? 'checked' : '' %>> Denied<br>
                    <input type="radio" name="status" value="Completed" <%= eventRequests.status === 'Completed' ? 'checked' : '' %>> Completed
                </td>
            </tr>
            <tr>
                <td><label for="notes">Notes</label></td>
                <td><input type="text" id="notes" name="notes" required value="<%= eventRequests.notes %>"></td>
            </tr>
            <tr>
                <td colspan="11" style="text-align: center; width: 100%;">
                    <button class="table-button" type="submit">Edit Event</button>
                </td>
            </tr>
        </table>
    </form>

    <form action="/eventRequests" method="GET">
        <button type="submit">Back</button>
    </form>

    <main></main>
    <footer>
        <div class="footer-left">
            <a href="/login">Admin Tools</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
