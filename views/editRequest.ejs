<!-- Form to edit requested events. (Is there an easy way to let them check approved, denied, pending, etc?) -->

<!DOCTYPE html>
<html>
<head>
    <title>Edit Requested Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1 style="text-align: center;">Edit Requested Event</h1>
    
    <!-- Route to post changes -->
    <form action="/editRequest/<%= eventRequests.event_id %>" method="POST">

        <!-- Description: Character Varying -->
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= eventRequests.description %>" required>

        <!-- Anticipated_Participants: Integer -->
        <label for="anticipated_participants">Anticipated Participants</label>
        <input type="number" id="anticipated_participants" name="anticipated_participants" value="<%= eventRequests.anticipated_participants %>">

        <!-- Under_Ten: Integer -->
        <label for="under_ten">Under Ten</label>
        <input type="number" id="under_ten" name="under_ten" value="<%= eventRequests.under_ten %>">

        <!-- Possible_Date: Datetime -->
        <label for="possible_date">Possible Date</label>
        <input type="date" id="possible_date" name="possible_date" value="<%= eventRequests.possible_date.toISOString().split('T')[0] %>">

        <!-- Type: Character Varying/ Radio -->
        <label>Event Type</label>
        <label>
            <input type="radio" name="type" value="Sewing" <%= eventRequests.type === 'Sewing' ? 'checked' : '' %>> Sewing
        </label>
        <label>
            <input type="radio" name="type" value="Non-sewing"<%= eventRequests.type === 'Non-sewing' ? 'checked' : '' %>> Non-sewing
        </label>
        <label>
            <input type="radio" name="type" value="Both" <%= eventRequests.type === 'Non-sewing' ? 'checked' : '' %>> Both
        </label>

        <!-- Address: Character Varying -->
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="<%= eventRequests.address %>">

        <!-- Start_Time: Time -->
        <label for="start_time">Start Time</label>
        <input type="time" id="start_time" name="start_time" value="<%= eventRequests.start_time %>">

        <!-- Duration: Character Varying -->
        <label for="duration">Duration</label>
        <input type="text" id="duration" name="duration" value="<%= eventRequests.duration %>">

        <!-- Contact_Name: Character Varying -->
        <label for="contact_name">Contact Name</label>
        <input type="text" id="contact_name" name="contact_name" value="<%= eventRequests.contact_name %>">

        <!-- Contact_Phone: Character Varying -->
        <label for="contact_phone">Contact Phone</label>
        <input type="text" id="contact_phone" name="contact_phone" value="<%= eventRequests.contact_phone %>">

        <!-- Contact_Email: Character Varying -->
        <label for="contact_email">Contact Email</label>
        <input type="text" id="contact_email" name="contact_email" value="<%= eventRequests.contact_email %>">

        <!-- Machines: Integer -->
        <label for="machines">Machines</label>
        <input type="number" id="machines" name="machines" value="<%= eventRequests.machines %>">

        <!-- Sewers: Integer -->
        <label for="sewers">Sewers</label>
        <input type="number" id="sewers" name="sewers" value="<%= eventRequests.sewers %>">

        <!-- Story: Character Varying/ Radio -->
        <label>Did Jen share her story?</label>
        <label>
            <input type="radio" name="story" value="Yes, long" <%= eventRequests.story === 'Yes, long' ? 'checked' : '' %>> Yes, Long
        </label>
        <label>
            <input type="radio" name="story" value="Yes, short" <%= eventRequests.story === 'Yes, short' ? 'checked' : '' %>> Yes, Short
        </label>
        <label>
            <input type="radio" name="story" value="No" <%= eventRequests.story === 'No' ? 'checked' : '' %>> No
        </label>

        <!-- Members_Needed: Integer -->
        <label for="members_needed">Members Needed</label>
        <input type="number" id="members_needed" name="members_needed" value="<%= eventRequests.members_needed %>">

        <!-- Status Character Varying / Radio-->
        <label>Status</label>
        <label>
            <input type="radio" name="status" value="Pending" <%= eventRequests.status === 'Pending' ? 'checked' : '' %>> Pending
        </label>
        <label>
            <input type="radio" name="status" value="Approved" <%= eventRequests.status === 'Approved' ? 'checked' : '' %>> Approved
        </label>
        <label>
            <input type="radio" name="status" value="Denied" <%= eventRequests.status === 'No' ? 'Denied' : '' %>> Denied
        </label>
        <label>
            <input type="radio" name="status" value="Completed" <%= eventRequests.status === 'No' ? 'Completed' : '' %>> Completed
        </label>

        <!-- Notes: Character Varying -->
        <label for="notes">Notes</label>
        <input type="text" id="notes" name="notes" value="<%= eventRequests.notes %>">

        <!-- Submit Button -->
        <button type="submit">Edit</button>
    </form>
</body>
</html>
