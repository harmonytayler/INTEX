                        <option value="PA" <%= scheduledEvents.state === "PA" ? "selected" : "" %>>Pennsylvania</option>
                        <option value="RI" <%= scheduledEvents.state === "RI" ? "selected" : "" %>>Rhode Island</option>
                        <option value="SC" <%= scheduledEvents.state === "SC" ? "selected" : "" %>>South Carolina</option>
                        <option value="SD" <%= scheduledEvents.state === "SD" ? "selected" : "" %>>South Dakota</option>
                        <option value="TN" <%= scheduledEvents.state === "TN" ? "selected" : "" %>>Tennessee</option>
                        <option value="TX" <%= scheduledEvents.state === "TX" ? "selected" : "" %>>Texas</option>
                        <option value="UT" <%= scheduledEvents.state === "UT" ? "selected" : "" %>>Utah</option>
                        <option value="VT" <%= scheduledEvents.state === "VT" ? "selected" : "" %>>Vermont</option>
                        <option value="VA" <%= scheduledEvents.state === "VA" ? "selected" : "" %>>Virginia</option>
