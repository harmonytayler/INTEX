                        <option value="CA" <%= scheduledEvents.state === "CA" ? "selected" : "" %>>California</option>
                        <option value="CO" <%= scheduledEvents.state === "CO" ? "selected" : "" %>>Colorado</option>
                        <option value="CT" <%= scheduledEvents.state === "CT" ? "selected" : "" %>>Connecticut</option>
                        <option value="DE" <%= scheduledEvents.state === "DE" ? "selected" : "" %>>Delaware</option>
                        <option value="DC" <%= scheduledEvents.state === "DC" ? "selected" : "" %>>District of Columbia</option>
                        <option value="FL" <%= scheduledEvents.state === "FL" ? "selected" : "" %>>Florida</option>
                        <option value="GA" <%= scheduledEvents.state === "GA" ? "selected" : "" %>>Georgia</option>
                        <option value="HI" <%= scheduledEvents.state === "HI" ? "selected" : "" %>>Hawaii</option>
                        <option value="ID" <%= scheduledEvents.state === "ID" ? "selected" : "" %>>Idaho</option>
                        <option value="IL" <%= scheduledEvents.state === "IL" ? "selected" : "" %>>Illinois</option>
                        <option value="IN" <%= scheduledEvents.state === "IN" ? "selected" : "" %>>Indiana</option>
                        <option value="IA" <%= scheduledEvents.state === "IA" ? "selected" : "" %>>Iowa</option>
                        <option value="KS" <%= scheduledEvents.state === "KS" ? "selected" : "" %>>Kansas</option>
                        <option value="KY" <%= scheduledEvents.state === "KY" ? "selected" : "" %>>Kentucky</option>
                        <option value="LA" <%= scheduledEvents.state === "LA" ? "selected" : "" %>>Louisiana</option>
                        <option value="ME" <%= scheduledEvents.state === "ME" ? "selected" : "" %>>Maine</option>
                        <option value="MD" <%= scheduledEvents.state === "MD" ? "selected" : "" %>>Maryland</option>
                        <option value="MA" <%= scheduledEvents.state === "MA" ? "selected" : "" %>>Massachusetts</option>
                        <option value="MI" <%= scheduledEvents.state === "MI" ? "selected" : "" %>>Michigan</option>
                        <option value="MN" <%= scheduledEvents.state === "MN" ? "selected" : "" %>>Minnesota</option>
                        <option value="MS" <%= scheduledEvents.state === "MS" ? "selected" : "" %>>Mississippi</option>
                        <option value="MO" <%= scheduledEvents.state === "MO" ? "selected" : "" %>>Missouri</option>
                        <option value="MT" <%= scheduledEvents.state === "MT" ? "selected" : "" %>>Montana</option>
