<!-- Form to edit scheduled events -->

<!DOCTYPE html>
<html>
<head>
    <title>Edit Scheduled Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <div class="org-name">Turtle Shelter Project</div>
        <div class="nav-links">
            <a href="/landing2"><button class="link">Admin Home</button></a>
            <a href="/users"><button class="link">Team Members</button></a>
            <a href="/showVolunteers"><button class="link">Volunteer Requests</button></a>
            <a href="/eventRequests"><button class="link">Event Requests</button></a>
            <a href="/scheduledEvents"><button class="link">Scheduled Events</button></a>
            <a href="/pastEvents"><button class="link">Past Events</button></a>
        </div>
    </nav>
    <form action="/editScheduled/<%= scheduledEvents.event_id %>" method="POST">
        <table>
            <caption>Edit Scheduled Request</caption>
            <tr>
                <td><label for="description">Description</label></td>
                <td><input type="text" id="description" name="description" value="<%= scheduledEvents.description %>" required></td>
            </tr>
            <tr>
                <td><label for="anticipated_participants">Anticipated Participants</label></td>
                <td><input type="number" id="anticipated_participants" name="anticipated_participants" value="<%= scheduledEvents.anticipated_participants %>"></td>
            </tr>
            <tr>
                <td><label for="under_ten">Under Ten</label></td>
                <td><input type="number" id="under_ten" name="under_ten" value="<%= scheduledEvents.under_ten %>"></td>
            </tr>
            <tr hidden>
                <td><label for="possible_date">Requested Date</label></td>
                <td><input type="date" id="possible_date" name="possible_date" value="<%= scheduledEvents.possible_date.toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label for="actual_date">Scheduled Date</label></td>
                <td><input type="date" id="actual_date" name="actual_date" value="<%= new Date().toISOString().split('T')[0] %>"></td>
            </tr>
            <tr>
                <td><label>Event Type</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="type" value="Sewing" <%= scheduledEvents.type === 'Sewing' ? 'checked' : '' %>> Sewing<br>
                    <input type="radio" name="type" value="Non-sewing"<%= scheduledEvents.type === 'Non-sewing' ? 'checked' : '' %>> Non-sewing<br>
                    <input type="radio" name="type" value="Both" <%= scheduledEvents.type === 'Non-sewing' ? 'checked' : '' %>> Both
                </td>
            </tr>
            <tr>
                <td><label for="address">Address</label></td>
                <td><input type="text" id="address" name="address" value="<%= scheduledEvents.address %>"></td>
            </tr>
            <tr>
                <td><label for="start_time">Start Time</label></td>
                <td><input type="time" id="start_time" name="start_time" value="<%= scheduledEvents.start_time %>"></td>
            </tr><tr>
                <td><label for="duration">Duration</label></td>
                <td><input type="text" id="duration" name="duration" value="<%= scheduledEvents.duration %>"></td>
            </tr>
            <tr>
                <td><label for="contact_name">Contact Name</label></td>
                <td><input type="text" id="contact_name" name="contact_name" value="<%= scheduledEvents.contact_name %>"></td>
            </tr>
            <tr>
                <td><label for="contact_phone">Contact Phone</label></td>
                <td><input type="text" id="contact_phone" name="contact_phone" value="<%= scheduledEvents.contact_phone %>"></td>
            </tr>
            <tr>
                <td><label for="contact_email">Contact Email</label></td>
                <td><input type="text" id="contact_email" name="contact_email" value="<%= scheduledEvents.contact_email %>"></td>
            </tr>
            <tr>
                <td><label for="machines">Machines</label></td>
                <td><input type="number" id="machines" name="machines" value="<%= scheduledEvents.machines %>"></td>
            </tr>
            <tr>
                <td><label for="sewers">Sewers</label></td>
                <td><input type="number" id="sewers" name="sewers" value="<%= scheduledEvents.sewers %>"></td>
            </tr>
            <tr>
                <td><label>Did Jen share her story?</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="story" value="Yes, long" <%= scheduledEvents.story === 'Yes, long' ? 'checked' : '' %>> Yes, Long<br>
                    <input type="radio" name="story" value="Yes, short" <%= scheduledEvents.story === 'Yes, short' ? 'checked' : '' %>> Yes, Short<br>
                    <input type="radio" name="story" value="No" <%= scheduledEvents.story === 'No' ? 'checked' : '' %>> No
                </td>
            </tr>
            <tr>
                <td><label for="members_needed">Members Needed</label></td>
                <td><input type="number" id="members_needed" name="members_needed" value="<%= scheduledEvents.members_needed %>"></td>
            </tr>
            <tr>
                <td><label>Status</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="status" value="Pending" <%= scheduledEvents.status === 'Pending' ? 'checked' : '' %>> Pending<br>
                    <input type="radio" name="status" value="Approved" <%= scheduledEvents.status === 'Approved' ? 'checked' : '' %>> Approved<br>
                    <input type="radio" name="status" value="Denied" <%= scheduledEvents.status === 'No' ? 'Denied' : '' %>> Denied<br>
                    <input type="radio" name="status" value="Completed" <%= scheduledEvents.status === 'No' ? 'Completed' : '' %>> Completed
                </td>
            </tr>
            <tr>
                <td><label for="notes">Notes</label></td>
                <td><input type="text" id="notes" name="notes" value="<%= scheduledEvents.notes %>"></td>
            </tr>
        </table>
        <button type="submit">Submit</button>
    </form>

    <form action="/scheduledEvents" method="GET">
        <button type="submit">Back</button>
    </form>

    <main></main>
    <footer>
        <div class="footer-left">
            <a href="/login">Admin Portal</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>Â© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>