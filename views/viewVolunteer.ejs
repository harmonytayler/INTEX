<!-- View all the details of a single volunteer when you click on it -->


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Volunteer Information</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <nav>
            <div class="org-name">Turtle Shelter Project</div>
            <div class="nav-links">
                <a href="/landing2"><button class="link">Admin Home</button></a>
                <a href="/users"><button class="link">Team Members</button></a>
                <a href="/showVolunteers"><button class="link">Volunteer Requests</button></a>
                <a href="/eventRequests"><button class="link">Event Requests</button></a>
                <a href="/scheduledEvents"><button class="link">Scheduled Events</button></a>
                <a href="/pastEvents"><button class="link">Past Events</button></a>
            </div>
        </nav>
        <table class="view">
            <caption>Volunteer Details</caption>
            <tr>
                <td><label>Volunteer ID</label></td>
                <td><p><%= showVolunteers.volunteer_id %></p></td>
            </tr>
            <tr>
                <td><label>First Name</label></td>
                <td><p><%= showVolunteers.first_name %></p></td>
            </tr>
            <tr>
                <td><label>Last Name</label></td>
                <td><p><%= showVolunteers.last_name %></p></td>
            </tr>
            <tr>
                <td><label>Phone Number</label></td>
                <td><p><%= showVolunteers.phone %></p></td>
            </tr>
            <tr>
                <td><label>Email</label></td>
                <td><p><%= showVolunteers.email %></p></td>
            </tr>
            <tr>
                <td><label>Referral Source</label></td>
                <td><p><%= showVolunteers.referral_source %></p></td>
            </tr>
            <tr>
                <td><label>Sewing Level</label></td>
                <td><p><%= showVolunteers.sewing_level %></p></td>
            </tr>
            <tr>
                <td><label>Monthly Hours</label></td>
                <td><p><%= showVolunteers.monthly_hours %></p></td>
            </tr>
            <tr>
                <td><label>City</label></td>
                <td><p><%= showVolunteers.city %></p></td>
            </tr>
            <tr>
                <td><label>Travel</label></td>
                <td><p><%= showVolunteers.travel %></p></td>
            </tr>
            <tr>
                <td><label>Leader</label></td>
                <td><p><%= showVolunteers.take_charge == "Y" ? "Yes" : "No" %></p></td>
            </tr>
            <tr>
                <td><label>Status</label></td>
                <td><p><%= showVolunteers.status %></p></td>
            </tr>
        </table>
        <form action="/showVolunteers" method="GET">
            <button type="submit">Return</button>
        </form>
        <main></main>
    <footer>
        <div class="footer-left">
            <a href="/login">Admin Portal</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>Â© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
    </body>
</html>