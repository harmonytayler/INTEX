<!-- Form to edit past events -->

<!DOCTYPE html>
<html>
<head>
    <title>Edit Past Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1 style="text-align: center;">Edit Past Event</h1>
    
    <!-- Route to post changes -->
    <form action="/editPast/<%= pastEvents.event_id %>" method="POST">

        <!-- Description: Character Varying -->
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= pastEvents.description %>" required>

        <!-- Anticipated_Participants: Integer -->
        <label for="anticipated_participants">Anticipated Participants</label>
        <input type="number" id="anticipated_participants" name="anticipated_participants" value="<%= pastEvents.anticipated_participants %>">

        <!-- Under_Ten: Integer -->
        <label for="under_ten">Under Ten</label>
        <input type="number" id="under_ten" name="under_ten" value="<%= pastEvents.under_ten %>">

        <!-- Possible_Date: Datetime -->
        <label for="possible_date">Possible Date</label>
        <input type="date" id="possible_date" name="possible_date" value="<%= pastEvents.possible_date.toISOString().split('T')[0] %>">

        <!-- Type: Character Varying/ Radio -->
        <label>Event Type</label>
        <label>
            <input type="radio" name="type" value="Sewing" <%= pastEvents.type === 'Sewing' ? 'checked' : '' %>> Sewing
        </label>
        <label>
            <input type="radio" name="type" value="Non-sewing"<%= pastEvents.type === 'Non-sewing' ? 'checked' : '' %>> Non-sewing
        </label>
        <label>
            <input type="radio" name="type" value="Both" <%= pastEvents.type === 'Non-sewing' ? 'checked' : '' %>> Both
        </label>

        <!-- Address: Character Varying -->
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="<%= pastEvents.address %>">

        <!-- Start_Time: Time -->
        <label for="start_time">Start Time</label>
        <input type="time" id="start_time" name="start_time" value="<%= pastEvents.start_time %>">

        <!-- Duration: Character Varying -->
        <label for="duration">Duration</label>
        <input type="text" id="duration" name="duration" value="<%= pastEvents.duration %>">

        <!-- Contact_Name: Character Varying -->
        <label for="contact_name">Contact Name</label>
        <input type="text" id="contact_name" name="contact_name" value="<%= pastEvents.contact_name %>">

        <!-- Contact_Phone: Character Varying -->
        <label for="contact_phone">Contact Phone</label>
        <input type="text" id="contact_phone" name="contact_phone" value="<%= pastEvents.contact_phone %>">

        <!-- Contact_Email: Character Varying -->
        <label for="contact_email">Contact Email</label>
        <input type="text" id="contact_email" name="contact_email" value="<%= pastEvents.contact_email %>">

        <!-- Machines: Integer -->
        <label for="machines">Machines</label>
        <input type="number" id="machines" name="machines" value="<%= pastEvents.machines %>">

        <!-- Sewers: Integer -->
        <label for="sewers">Sewers</label>
        <input type="number" id="sewers" name="sewers" value="<%= pastEvents.sewers %>">

        <!-- Story: Character Varying/ Radio -->
        <label>Did Jen share her story?</label>
        <label>
            <input type="radio" name="story" value="Yes, long" <%= pastEvents.story === 'Yes, long' ? 'checked' : '' %>> Yes, Long
        </label>
        <label>
            <input type="radio" name="story" value="Yes, short" <%= pastEvents.story === 'Yes, short' ? 'checked' : '' %>> Yes, Short
        </label>
        <label>
            <input type="radio" name="story" value="No" <%= pastEvents.story === 'No' ? 'checked' : '' %>> No
        </label>

        <!-- Actual_Date: Datetime -->
        <label for="actual_date">Actual Date</label>
        <input type="date" id="actual_date" name="actual_date" value="<%= pastEvents.actual_date.toISOString().split('T')[0] %>">

        <!-- Actual_Participants: Integer -->
        <label for="actual_participants">Actual Participants</label>
        <input type="number" id="actual_participants" name="actual_participants" value="<%= pastEvents.actual_participants %>">

        <!-- Pockets: Integer -->
        <label for="pockets">Pockets Completed</label>
        <input type="number" id="pockets" name="pockets" value="<%= pastEvents.pockets %>">

        <!-- Collars: Integer -->
        <label for="collars">Collars Completed</label>
        <input type="number" id="collars" name="collars" value="<%= pastEvents.collars %>">

        <!-- Envelopes: Integer -->
        <label for="envelopes">Envelopes Completed</label>
        <input type="number" id="envelopes" name="envelopes" value="<%= pastEvents.envelopes %>">

        <!-- Vests: Integer -->
        <label for="vests">Vests Completed</label>
        <input type="number" id="vests" name="vests" value="<%= pastEvents.vests %>">

        <!-- Members_Needed: Integer -->
        <label for="members_needed">Members Needed</label>
        <input type="number" id="members_needed" name="members_needed" value="<%= pastEvents.members_needed %>">

        <!-- Status Character Varying / Radio-->
        <label>Status</label>
        <label>
            <input type="radio" name="status" value="Pending" <%= pastEvents.status === 'Pending' ? 'checked' : '' %>> Pending
        </label>
        <label>
            <input type="radio" name="status" value="Approved" <%= pastEvents.status === 'Approved' ? 'checked' : '' %>> Approved
        </label>
        <label>
            <input type="radio" name="status" value="Denied" <%= pastEvents.status === 'No' ? 'Denied' : '' %>> Denied
        </label>
        <label>
            <input type="radio" name="status" value="Completed" <%= pastEvents.status === 'No' ? 'Completed' : '' %>> Completed
        </label>

        <!-- Notes: Character Varying -->
        <label for="notes">Notes</label>
        <input type="text" id="notes" name="notes" value="<%= pastEvents.notes %>">

        <!-- Submit Button -->
        <button type="submit">Edit</button>
    </form>
</body>
</html>
