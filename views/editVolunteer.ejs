<!-- Form to edit volunteers -->


<!DOCTYPE html>
<html>
<head>
    <title>Edit Volunteer</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <div class="org-name">Turtle Shelter Project</div>
        <div class="nav-links">
            <a href="/landing2"><button class="link">Admin Tools</button></a>
            <a href="/"><button class="link">Home Page</button></a>
        </div>
    </nav>
    <form action="/editVolunteer/<%= showVolunteer.volunteer_id %>" method="POST">
        <table>
            <caption>Edit Volunteer</caption>
            <input type="hidden" id="volunteer_id" name="volunteer_id" value="<%= showVolunteer.volunteer_id %>">
            <tr>
                <td><label for="first_name">First Name</label></td>
                <td><input type="text" id="first_name" name="first_name" required value="<%= showVolunteer.first_name %>"></td>
            </tr>
            <tr>
                <td><label for="last_name">Last Name</label></td>
                <td><input type="text" id="last_name" name="last_name" required value="<%= showVolunteer.last_name %>"></td>
            </tr>
            <tr>
                <td><label for="phone">Phone Number</label></td>
                <td><input type="text" id="phone" name="phone" required value="<%= showVolunteer.phone %>"></td>
            </tr>
            <tr>
                <td><label for="email">Email</label></td>
                <td><input type="text" id="email" name="email" required value="<%= showVolunteer.email %>"></td>
            </tr>
            <tr>
                <td><label for="referral_source">Referral Source</label></td>
                <td><input type="text" id="referral_source" name="referral_source" required value="<%= showVolunteer.referral_source %>"></td>
            </tr>
            <tr>
                <td><label>Sewing Level</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="sewer" value="Beginner" <%= showVolunteer.sewing_level == "Beginner" ? "checked" : "" %>> Beginner<br>
                    <input type="radio" name="sewer" value="Intermediate" <%= showVolunteer.sewing_level == "Intermediate" ? "checked" : "" %>> Intermediate<br>
                    <input type="radio" name="sewer" value="Experienced" <%= showVolunteer.sewing_level == "Experienced" ? "checked" : "" %>> Experienced
                </td>
            </tr>
            <tr>
                <td><label for="monthly_hours">Monthly Hours</label></td>
                <td><input type="number" step="0.01" id="monthly_hours" name="monthly_hours" required value="<%= showVolunteer.monthly_hours %>"></td>
            </tr>
            <tr>
                <td><label for="city">City</label></td>
                <td><input type="text" id="city" name="city" required value="<%= showVolunteer.city %>"></td>
            </tr>
            <tr>
                <td><label for="travel">Travel</label></td>
                <td><input type="text" id="travel" name="travel" required value="<%= showVolunteer.travel %>"></td>
            </tr>
            <tr>
                <td><label for="take_charge">Leader</label></td>
                <td style="text-align: left;">
                    <input type="radio" id="take_charge" name="take_charge" value="Y" <%= showVolunteer.take_charge == true ? "checked" : "" %>>Yes<br>
                    <input type="radio" id="take_charge" name="take_charge" value="N" <%= showVolunteer.take_charge == false ? "checked" : "" %>>No
                </td>
            </tr>
            <tr>
                <td><label>Status</label></td>
                <td style="text-align: left;">
                    <input type="radio" name="status" value="Active" <%= showVolunteer.status == "Active" ? "checked" : "" %>> Active<br>
                    <input type="radio" name="status" value="Pending" <%= showVolunteer.status == "Pending" ? "checked" : "" %>> Pending<br>
                    <input type="radio" name="status" value="Denied" <%= showVolunteer.status == "Denied" ? "checked" : "" %>> Denied
                </td>
            </tr>
            <tr>
                <td colspan="11" style="text-align: center; width: 100%;">
                    <button class="table-button" type="submit">Edit Volunteer</button>
                </td>
            </tr>
        </table>
    </form>
    <form action="/showVolunteers" method="GET">
        <button type="submit">Back to Volunteers</button>
    </form>
    
    <main></main>
    <footer>
        <div class="footer-left">
            <a href="/login">Admin Portal</a>
            <a href="/about">About</a>
            <a href="/volunteer">Volunteer</a>
        </div>
        <div class="footer-right">
            <p>Â© 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
