<!-- Form to add a past request -->

<!DOCTYPE html>
<html>
<head>
    <title>Add Requested Event</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1 style="text-align: center;">Add Requested Event</h1>
    
    <!-- Route to post changes -->
    <form action="/addScheduled" method="POST">

        <!-- Description: Character Varying -->
        <label for="description">Description</label>
        <input type="text" id="description" name="description" required>

        <!-- Anticipated_Participants: Integer -->
        <label for="anticipated_participants">Anticipated Participants</label>
        <input type="number" id="anticipated_participants" name="anticipated_participants">

        <!-- Under_Ten: Integer -->
        <label for="under_ten">Under Ten</label>
        <input type="number" id="under_ten" name="under_ten">

        <!-- Possible_Date: Datetime -->
        <label for="possible_date">Possible Date</label>
        <input type="date" id="possible_date" name="possible_date" value="<%= new Date().toISOString().split('T')[0] %>">

        <!-- Type: Character Varying/ Radio -->
        <label>Event Type</label>
        <label>
            <input type="radio" name="type" value="Sewing" checked> Sewing
        </label>
        <label>
            <input type="radio" name="type" value="Non-sewing"> Non-sewing
        </label>
        <label>
            <input type="radio" name="type" value="Both"> Both
        </label>

        <!-- Address: Character Varying -->
        <label for="address">Address</label>
        <input type="text" id="address" name="address">

        <!-- Start_Time: Time -->
        <label for="start_time">Start Time</label>
        <input type="time" id="start_time" name="start_time">

        <!-- Duration: Character Varying -->
        <label for="duration">Duration</label>
        <input type="text" id="duration" name="duration">

        <!-- Contact_Name: Character Varying -->
        <label for="contact_name">Contact Name</label>
        <input type="text" id="contact_name" name="contact_name">

        <!-- Contact_Phone: Character Varying -->
        <label for="contact_phone">Contact Phone</label>
        <input type="text" id="contact_phone" name="contact_phone">

        <!-- Contact_Email: Character Varying -->
        <label for="contact_email">Contact Email</label>
        <input type="text" id="contact_email" name="contact_email">

        <!-- Machines: Integer -->
        <label for="machines">Machines</label>
        <input type="number" id="machines" name="machines">

        <!-- Sewers: Integer -->
        <label for="sewers">Sewers</label>
        <input type="number" id="sewers" name="sewers">

        <!-- Story: Character Varying/ Radio -->
        <label>Should Jen share her story?</label>
        <label>
            <input type="radio" name="story" value="Yes, long"> Yes, Long
        </label>
        <label>
            <input type="radio" name="story" value="Yes, no"> Yes, Short
        </label>
        <label>
            <input type="radio" name="story" value="No"> No
        </label>

        <!-- Members_Needed: Integer -->
        <label for="members_needed">Members Needed</label>
        <input type="number" id="members_needed" name="members_needed">

        <!-- Notes: Character Varying -->
        <label for="notes">Notes</label>
        <input type="text" id="notes" name="notes">

        <!-- Submit Button -->
        <button type="submit">Add</button>
    </form>
</body>
</html>
